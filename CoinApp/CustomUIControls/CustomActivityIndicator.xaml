<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fontAwesome="clr-namespace:FontAwesome"
             x:Class="CoinApp.CustomUIControls.CustomActivityIndicator">
  <ContentView.Content>
        <Grid x:Name="LoaderContainer" BackgroundColor="Transparent">
            <BoxView Color="White" Opacity="0.5"/>
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <ActivityIndicator IsRunning="True"/>
                <Image>
                    <Image.Source>
                        <FontImageSource FontFamily="FontAwesomeBrands" Color="Blue"
                                Glyph="{x:Static fontAwesome:FontAwesomeIcons.Bitcoin}"/>
                    </Image.Source>
                </Image>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>